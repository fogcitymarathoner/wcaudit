    <h4>

.row
  .twelve.columns
    <h2>Employees</h2>
.row
  .three.columns
    name display
  .three.columns
    title
  .four.columns
    duties
  .one.columns
    state
  .one.columns.left
    total
- states = ['AZ','CA','MO','NJ','TX']
- statetotals = Hash.new()
- totaltotals =0
- states.each do |state|
  - statetotals[state]=0
  - @audit.each do |emp|
    - if emp.total >0 && !exclude.include?(emp.name.rstrip()) && emp.state.rstrip() == state
      - statetotals[state] = statetotals[state] + emp.total

- states.each do |state|
  - @audit.each do |emp|
    - if emp.total >0 && !exclude.include?(emp.name.rstrip())&& emp.state.rstrip() == state
      - totaltotals = totaltotals + emp.total
      .row
        .three.columns
          =link_to emp.namedisplay, edit_audit_path( :id =>emp.id )
        .three.columns
          =emp.title
        .four.columns
          =emp.duties
        .one.columns
          =emp.state
        .one.columns.left
          = "%05.2f"%  emp.total	

  .row	
