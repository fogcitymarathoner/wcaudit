- i = 0
- total = 0
- exclude = ['MARCCONDON','SHEREENEOH']
- @audit.each do |emp|
  - if emp.total >0 && exclude.include?(emp.name.rstrip())
    - total = total + emp.total
    .row
      .two.columns
        =link_to emp.namedisplay, edit_audit_path( :id =>emp.id )
      .one.columns
        =emp.title
      .one.columns
        =emp.percent
      .two.columns
        =emp.duties
      .one.columns
        =emp.state
      .one.columns.left
        = sprintf("%05.2f", emp.total)

