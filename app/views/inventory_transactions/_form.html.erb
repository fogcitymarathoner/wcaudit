<%= form_for @inventory_transaction, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :transaction_type, :class => 'control-label' %>
    <div class="controls">
      <%= select_tag  "transaction_type", options_for_select(['inventory','invoice'],@inventory_transaction.transaction_type)  %> 
    </div>
  </div>
  <div class="control-group">
    <%= f.label :invoice_item_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :invoice_item_id, :class => 'number_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :inventory_item_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :inventory_item_id, :class => 'number_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :cost, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :cost, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :price, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :price, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :quantity, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :quantity, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :notes, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :notes, :class => 'text_field' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                inventory_transactions_path, :class => 'btn' %>
  </div>
<% end %>
