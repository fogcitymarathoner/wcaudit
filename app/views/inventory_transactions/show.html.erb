<%- model_class = InventoryTransaction -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:transaction_type) %>:</strong></dt>
  <dd><%= @inventory_transaction.transaction_type %></dd>
  <dt><strong><%= model_class.human_attribute_name(:invoice_item_id) %>:</strong></dt>
  <dd><%= @inventory_transaction.invoice_item_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:inventory_item_id) %>:</strong></dt>
  <dd><%= @inventory_transaction.inventory_item_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:cost) %>:</strong></dt>
  <dd><%= @inventory_transaction.cost %></dd>
  <dt><strong><%= model_class.human_attribute_name(:price) %>:</strong></dt>
  <dd><%= @inventory_transaction.price %></dd>
  <dt><strong><%= model_class.human_attribute_name(:quantity) %>:</strong></dt>
  <dd><%= @inventory_transaction.quantity %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              inventory_transactions_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_inventory_transaction_path(@inventory_transaction), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              inventory_transaction_path(@inventory_transaction),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
